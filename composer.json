{
    "name": "t73biz/phpunit-watcher",
    "description": "Automatically rerun PHPUnit tests when source code changes",
    "keywords": [
        "spatie",
        "phpunit-watcher"
    ],
    "homepage": "https://github.com/rongchaplin/phpunit-watcher",
    "license": "MIT",
    "authors": [
        {
            "name": "Freek Van der Herten",
            "email": "freek@spatie.be",
            "homepage": "https://spatie.be",
            "role": "Developer"
        },
        {
            "name": "Ron G Chaplin",
            "email": "rchaplin@t73.biz",
            "homepage": "https://t73.biz",
            "role": "Developer"
        },
        {
            "name": "Victor Puertas",
            "email": "vpgugr@gmail.com"
        }
    ],
    "require": {
        "php": "^7.2 | ^8.0 | ^8.1",
        "clue/stdio-react": "^2.4",
        "jolicode/jolinotif": "^2.2",
        "symfony/console": "^5 | ^6",
        "symfony/finder": "^6.2",
        "symfony/process": "^5.4 | ^6",
        "symfony/yaml": "^5.2 | ^6"
    },
    "conflict": {
        "symfony/console": "<5.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.6 | ^9.0"
    },
    "autoload": {
        "psr-4": {
            "T73Biz\\PhpUnitWatcher\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "T73Biz\\PhpUnitWatcher\\Test\\": "tests"
        },
        "files": [
            "tests/helpers.php"
        ]
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "config": {
        "sort-packages": true
    },
    "bin": [
        "phpunit-watcher"
    ]
}
